<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_qr_scan">

    <fragment
        android:id="@+id/navigation_qr_scan"
        android:name="com.smartlock.key.ui.qrscan.QRFragment"
        android:label="QR Scan"
        tools:layout="@layout/fragment_qr">
        <action
            android:id="@+id/action_navigation_qr_scan_to_navigation_verifier_details"
            app:destination="@id/navigation_verifier_details"
            app:popUpTo="@id/navigation_qr_scan"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_verifier_details"
        android:name="com.smartlock.key.ui.verifier.DetailsFragment"
        android:label="Verifier Details"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_navigation_verifier_details_to_navigation_qr_scan"
            app:destination="@id/navigation_qr_scan"
            app:popUpTo="@id/navigation_verifier_details"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
